!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=Edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0", :name => "viewport"}/
    %meta{:content => image_url('logo_facebook_2.png'), :name => "og:image"}/
    %meta{:content => "image/png", :property => "og:image:type"}/
    %meta{:content => "article", :name => "og:type"}/
    %meta{:content => "LetterLoose", :name => "og:site_name"}/
    %meta{:content => "http://www.letterloose.com", :name => "og:url"}/

    %link{:href => "/apple-icon-60x60.png", :rel => "apple-touch-icon", :sizes => "60x60"}/
    %link{:href => "/apple-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => "/apple-icon-76x76.png", :rel => "apple-touch-icon", :sizes => "76x76"}/
    %link{:href => "/apple-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/
    %link{:href => "/apple-icon-120x120.png", :rel => "apple-touch-icon", :sizes => "120x120"}/
    %link{:href => "/apple-icon-144x144.png", :rel => "apple-touch-icon", :sizes => "144x144"}/
    %link{:href => "/apple-icon-152x152.png", :rel => "apple-touch-icon", :sizes => "152x152"}/
    %link{:href => "/apple-icon-180x180.png", :rel => "apple-touch-icon", :sizes => "180x180"}/
    %link{:href => "/android-icon-192x192.png", :rel => "icon", :sizes => "192x192", :type => "image/png"}/
    %link{:href => "/favicon-96x96.png", :rel => "icon", :sizes => "96x96", :type => "image/png"}/

    %link{:href => "/favicon-32x32.png", :rel => "icon", :sizes => "32x32", :type => "image/png"}/
    %link{:href => "/favicon-16x16.png", :rel => "icon", :sizes => "16x16", :type => "image/png"}/

    = favicon_link_tag "/favicon.ico"

    = content_for?(:og_tags) ? yield(:og_tags) : ''

    %title= content_for?(:title) ? yield(:title) : "LetterLoose"
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"

    %meta{ name:'google-site-verification', content: "C1l1Q5IhczN7uTxiUVHdOZyZYncRVyALyFkeg6zId9s" }
  %body
    = render partial: 'layouts/navbar'
    .container
      .row
        .col-lg-12
          .flash-container
            = bootstrap_flash
          = yield

    %footer.footer
      .container
        .row
          .col-md-3
            =link_to privacy_policy_path do
              %span.text-muted Privacy Policy
            |
            =link_to terms_of_use_path do
              %span.text-muted Terms of Use


    = render partial: 'shared/google_analytics'
    #fb-root

