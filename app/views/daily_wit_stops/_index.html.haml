.row
  .col-md-4
    - @descriptions.each do |description|
      = render partial: 'shared/description', locals: {description: description}
      .clearfix
        = link_to 'Show preview', new_daily_wit_stop_path(description_id: description.id), class: 'btn btn-default btn-sm pull-right'
      %hr
    = paginate(@descriptions)
  .col-md-8
    = render partial: 'email_preview', locals: {description: @preview_description}

    - if @preview_description.present?
      = link_to daily_wit_stops_path(description_id: @preview_description.id), method: :post, class: 'btn btn-primary btn-lg' do
        Looks good! Schedule to Send

      = link_to daily_wit_stops_path, class: 'btn btn-default pull-right' do
        Reset
      %hr

    %h3 Scheduled
    - if @daily_wit_stops.scheduled.any?
      - @daily_wit_stops.scheduled.each do |daily_wit_stop|
        .col-md-6.panel.panel-default
          = render partial: 'shared/description', locals: {description: daily_wit_stop.description}
          %hr
        .col-md-6
          .alert.alert-info.alert-sm
            Scheduled to send at 3pm PST #{Date.today}
          .alert.alert-warning.alert-sm
            Generated by: #{daily_wit_stop.user.username}
          .alert.alert-danger.alert-sm

            = link_to daily_wit_stop_path(daily_wit_stop), method: :delete do
              %i.fa.fa-trash
              Unschedule
    .row
      .col-xs-12
        %hr
        %h3 Sent
    .row.row-flex.row-flex-wrap
      - @daily_wit_stops.sent.each do |daily_wit_stop|
        .col-md-6
          %div
            = render partial: 'shared/description', locals: {description: daily_wit_stop.description}
            = "#{daily_wit_stop.sent_at.strftime("%a, %e %b %Y %H:%M:%S %z")} BY: #{daily_wit_stop.user.username}"
            %hr